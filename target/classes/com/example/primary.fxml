<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>

<VBox alignment="TOP_CENTER" spacing="10" xmlns="http://javafx.com/javafx/8.0.171"
   xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.PrimaryController"
   style="-fx-background-color: #D9EAD3;">

   <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #FFF2CC;">
      <Label fx:id="userInfoLabel" style="-fx-font-size: 20px; -fx-text-fill: black;" text="Kullanıcı Bilgisi" />
   </HBox>

   <!-- Üst Menü -->
   <HBox spacing="20" style="-fx-background-color: #D0E0E3;">
      <!-- Sol Taraf Menü -->
      <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #F4CCCC;">
         <Button text="Home" />
         <Button text="Contact" />
         <Button text="Report" />
      </HBox>
      <!-- Sağ Taraf İkonlar -->
      <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-background-color: #C9DAF8;">
         <Button fx:id="addButton" text="Login" style="-fx-background-color: #007ACC; -fx-text-fill: white;" />
         <Button fx:id="uploadButton" text="Load Csv file" style="-fx-background-color: #007ACC; -fx-text-fill: white;" />
         <Button style="-fx-background-color: transparent;">
            <graphic>
               <ImageView fitWidth="32" fitHeight="32">
                  <Image url="file:src/main/resources/images/settings.png" />
               </ImageView>
            </graphic>
         </Button>
      </HBox>
   </HBox>

   <!-- İçerik Alanı -->
   <HBox spacing="10" style="-fx-background-color: #EAD1DC;">
      <!-- Sol Tarafta CSV Geçmişi -->
      <VBox prefWidth="200" spacing="10" style="-fx-background-color: #F4F4F4;">
         <Label text="CSV Geçmişi" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10;" />
      </VBox>
      <!-- Sağ Tarafta Mapping Data -->
      <VBox alignment="TOP_LEFT" spacing="10" style="-fx-background-color: #FFD966;">
         <Label text="Mapping Data" style="-fx-font-size: 16px;" />
         <TableView fx:id="tableView" visible="false">
            <columns>
               <TableColumn text="ID" fx:id="idColumn" />
               <TableColumn text="Name" fx:id="nameColumn" />
            </columns>
         </TableView>
         <TableView fx:id="mongoTableView" visible="false">
            <columns>
               <TableColumn text="ID" fx:id="idColumnMongo" />
               <TableColumn text="Name" fx:id="nameColumnMongo" />
            </columns>
         </TableView>
      </VBox>
   </HBox>

   <!-- Paddings -->
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>

</VBox>
