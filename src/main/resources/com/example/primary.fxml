<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>

<VBox alignment="TOP_CENTER" spacing="10" xmlns="http://javafx.com/javafx/8.0.171"
   xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.PrimaryController">

   <!-- Üst Menü -->
   <HBox spacing="20">
      <!-- Sol Taraf Menü -->
      <HBox alignment="CENTER_LEFT" spacing="20">
         <Button text="Home" />
         <Button text="Campaign" />
         <Button text="Contact" />
         <Button text="Report" />
         <Button text="Automation" />
      </HBox>
      <!-- Genişlik sağlamak için boşluk -->
      <!-- Sağ Taraf İkonlar -->
      <HBox alignment="CENTER_RIGHT" spacing="10" HBox.hgrow="ALWAYS">
         <Button style="-fx-background-color: transparent;">
            <graphic>
               <ImageView fitWidth="32" fitHeight="32">
                  <Image url="file:src/main/resources/images/settings.png" />
               </ImageView>
            </graphic>
         </Button>
      </HBox>
   </HBox>
   <!-- İçerik Alanı (Mapping Data ve CSV File) - Geri Kalan Alanı Dolduracak -->
   <VBox alignment="TOP_LEFT" spacing="10" VBox.vgrow="ALWAYS">
      <Label text="Import CSV File" style="-fx-font-size: 18px;" />
      <Button fx:id="uploadButton" text="Upload a file"
         style="-fx-background-color: #007ACC; -fx-text-fill: white;" />

      <Label text="Mapping Data" style="-fx-font-size: 16px;" />
      <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
         <!-- Sütunlar Dinamik Olarak Controller'da Eklenecek -->
      </TableView>
   </VBox>
   <!-- Paddings -->
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>

</VBox>